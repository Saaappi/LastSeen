<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\..\..\..\WoW\Data\Interface\AddOns\Blizzard_SharedXML\UI.xsd">
	<Script file="Frame.lua"/>

	<Frame name="LastSeenSearchFrame" inherits="PortraitFrameTemplate" parent="UIParent" hidden="false" enableMouse="true" movable="true">
		<Size x="650" y="400"/>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Frames>
            <EditBox name="$parentSearchBox" inherits="SearchBoxTemplate" letters="45">
                <Size x="145" y="20"/>
                <Anchors>
					<Anchor point="TOPLEFT" x="65" y="-30"/>
				</Anchors>
                <Scripts>
                    <OnEnter>
                        GameTooltip:SetOwner(self, "ANCHOR_RIGHT")
                        GameTooltip:SetText("Enter a search query. The cap is 45 characters.", nil, nil, nil, 1, true)
                        GameTooltip:Show()
                    </OnEnter>
                    <OnLeave>
                        GameTooltip:Hide()
                    </OnLeave>
                </Scripts>
                <!--
				<Scripts>
					<OnTextChanged function="MountJournal_OnSearchTextChanged"/>
					<OnHide function="MountJournal_ClearSearch"/>
				</Scripts>
                -->
            </EditBox>
            <Frame parentKey="ScrollBox" inherits="WowScrollBoxList">
                <Anchors>
                    <Anchor point="TOP" y="-12" />
                    <Anchor point="BOTTOMLEFT" x="4" y="4" />
                    <Anchor point="BOTTOMRIGHT" x="-6" y="4" relativeKey="$parent.ScrollBar"
                        relativePoint="BOTTOMLEFT" />
                </Anchors>
            </Frame>
            <EventFrame parentKey="ScrollBar" inherits="MinimalScrollBar">
                <Anchors>
                    <Anchor point="TOPRIGHT" x="-7" y="-24" />
                    <Anchor point="BOTTOMRIGHT" x="-7" y="7" />
                </Anchors>
            </EventFrame>
        </Frames>
        <!--
		<Frames>
			<Button parentKey="CloseButton" inherits="UIPanelCloseButtonDefaultAnchors"/>
			<Frame parentKey="MaximizeMinimize" inherits="MaximizeMinimizeButtonFrameTemplate">
				<Anchors>
					<Anchor point="RIGHT" relativeKey="$parent.CloseButton" relativePoint="LEFT" x="0" y="0"/>
				</Anchors>
			</Frame>

			<Frame parentKey="CraftingPage" inherits="ProfessionsCraftingPageTemplate" parentArray="Pages" frameLevel="100" hidden="true"/>
			<Frame parentKey="SpecPage" inherits="ProfessionsSpecPageTemplate" parentArray="Pages" frameLevel="100" hidden="true"/>
			<Frame parentKey="OrdersPage" inherits="ProfessionsCraftingOrderPageTemplate" parentArray="Pages" frameLevel="100" hidden="true"/>
		</Frames>
        -->
		<Scripts>
			<OnLoad>
                self:SetTitle("LastSeen Search")
                self:SetPortraitToAsset(134442)
                self:RegisterForDrag("LeftButton")
                self:SetClampedToScreen(true)
            </OnLoad>
            <OnDragStart>
                if not self.isLocked then
                    self:StartMoving()
                end
            </OnDragStart>
            <OnDragStop>
                self:StopMovingOrSizing()
            </OnDragStop>
		</Scripts>
	</Frame>
</Ui>
