<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

    <Button name="LastSeenItemTemplate" virtual="true">
        <Size y="40"/>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="itemTexture" name="$parentItemTexture" file="Interface\Buttons\UI-EmptySlot">
                    <Size x="24" y="24"/>
                    <Anchors>
                        <Anchor point="LEFT" x="0"/>
                    </Anchors>
                </Texture>
                <Texture parentKey="BackgroundTexture"/>
                <FontString parentKey="name" name="$parentName" inherits="GameFontNormal" text="Name" justifyH="LEFT">
                    <Size y="30"/>
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.itemTexture" relativePoint="RIGHT" x="3" y="7"/>
                    </Anchors>
                </FontString>
                <FontString parentKey="source" inherits="GameFontNormalSmall" text="Source" justifyV="BOTTOM" justifyH="CENTER">
                    <Size y="20"/>
                    <Anchors>
                        <Anchor point="CENTER" x="-220" y="0"/>
                    </Anchors>
                </FontString>
                <FontString parentKey="map" inherits="GameFontNormalSmall" text="Map" justifyV="BOTTOM" justifyH="CENTER">
                    <Size y="20"/>
                    <Anchors>
                        <Anchor point="CENTER" x="-60" y="0"/>
                    </Anchors>
                </FontString>
                <FontString parentKey="looterRace" inherits="GameFontNormalSmall" text="Race" justifyV="BOTTOM" justifyH="CENTER">
                    <Size y="20"/>
                    <Anchors>
                        <Anchor point="CENTER" x="45" y="0"/>
                    </Anchors>
                </FontString>
                <FontString parentKey="looterClass" inherits="GameFontNormalSmall" text="Class" justifyV="BOTTOM" justifyH="CENTER">
                    <Size y="20"/>
                    <Anchors>
                        <Anchor point="CENTER" x="100" y="0"/>
                    </Anchors>
                </FontString>
                <FontString parentKey="looterLevel" inherits="GameFontNormalSmall" text="Level" justifyV="BOTTOM" justifyH="RIGHT">
                    <Size y="20"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeKey="$parent.looterClass" relativePoint="TOPRIGHT" x="15" y="0"/>
                    </Anchors>
                </FontString>
                <FontString parentKey="lootDate" inherits="GameFontNormalSmall" text="LootDate" justifyV="BOTTOM" justifyH="RIGHT">
                    <Size y="20"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeKey="$parent.looterLevel" relativePoint="TOPRIGHT" x="15" y="0"/>
                    </Anchors>
                </FontString>
            </Layer>
            <Layer level="OVERLAY">
                <Texture parentKey="IconBorder">
                    <Size x="25" y="25"/>
                    <Anchors>
                        <Anchor point="CENTER" relativeKey="$parent.itemTexture"/>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="OVERLAY" textureSubLevel="1">
                <Texture parentKey="IconOverlay" hidden="true">
                    <Size x="25" y="25"/>
                    <Anchors>
                        <Anchor point="CENTER" relativeKey="$parent.itemTexture"/>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="OVERLAY" textureSubLevel="2">
                <Texture parentKey="IconOverlay2" hidden="true">
                    <Size x="25" y="25"/>
                    <Anchors>
                        <Anchor point="CENTER" relativeKey="$parent.itemTexture"/>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="HIGHLIGHT">
                <Texture parentKey="Highlight" atlas="groupfinder-highlightbar-blue" alphaMode="ADD">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="3" y="-3"/>
                        <Anchor point="BOTTOMRIGHT" x="-3" y="-1"/>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
        <Scripts>
            <OnLoad>
                <!-- Hide the shopping/comparison tooltips but only in the search frame -->
                hooksecurefunc(TooltipComparisonManager, "CompareItem", function()
                    GameTooltip_HideShoppingTooltips(GameTooltip)
                end)
            </OnLoad>
            <OnClick>
                if IsShiftKeyDown() then
                    if not ChatEdit_InsertLink(self.link) then
                        ChatFrame_OpenChat(self.link)
                    end
                end
            </OnClick>
            <OnEnter>
                C_Timer.After(.1, function()
                    <!-- Set the game tooltip to show the item link of the item being hovered in the search frame -->
                    GameTooltip:SetOwner(self, "ANCHOR_LEFT")
                    GameTooltip:SetHyperlink(self.link)
                    GameTooltip:Show()
                end)
            </OnEnter>
            <OnLeave>
                GameTooltip:Hide()
                ResetCursor()
            </OnLeave>
        </Scripts>
    </Button>
</Ui>